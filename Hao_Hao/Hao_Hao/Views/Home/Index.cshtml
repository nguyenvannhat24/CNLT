                            <button class="btnBuyProduct vien-hover" type="submit">Thêm giỏ hàng</button>
                        </form>
                    </div>
                }
            </div>
            <!-- Next and previous buttons -->
            <a class="prev flex-center" onclick="plusSlides(-1,2)">&#10094;</a>

            <a class="next flex-center" onclick="plusSlides(1,2)">&#10095;</a>
            
