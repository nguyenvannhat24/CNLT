                        </form>
                    </div>
                }

            </div>
            <!-- Next and previous buttons -->
            <a class="prev flex-center" onclick="plusSlides(-1,1)">&#10094;</a>

            <a class="next flex-center" onclick="plusSlides(1,1)">&#10095;</a>
            
        </div>
    </div>
    <!-- p2 -->
    <!--  -->
