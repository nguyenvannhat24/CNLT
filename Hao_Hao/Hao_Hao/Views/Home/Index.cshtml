                        <!-- Các input ẩn để gửi dữ liệu -->
                        <input type="hidden" name="tenHang" value="@Model[i].TenSanPham" />
                        <input type="hidden" name="MaHang" value="@Model[i].Id" />
                        <input type="hidden" name="soLuong" value="1" />
                        <button class="btnBuyProduct vien-hover" type="submit">Thêm giỏ hàng</button>
                    </div>
                </form>
            }
        </div>
    </div>
    <div class="product-Hot">
        <div class="flex-start gap40px maginleft20">
            <img src="img/Firer.png" alt="" />
            <h1>SẢN PHẨM MỚI</h1>
        </div>
        <div class="grid">
            @for (var i = 0; i < 5; i++)
            {
