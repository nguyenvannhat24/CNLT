                        <button class="btnBuyProduct vien-hover" type="submit">Thêm giỏ hàng</button>
                    </div>
                </form>
            }
        </div>
    </div>
    <div class="product-New backgroudwihte">
        <div class="flex-center-colum magintop gap40px">
            <img src="img/Banner ưu đãi.png" alt="" />
            <div class="flex-center gap20px" id="typeMedicine">
                <div class="btnTapProduct">Giảm đau hạ sốt</div>
                <div class="btnTapProduct">Tim Mạch</div>
                <div class="btnTapProduct">Thần kinh</div>
                <div class="btnTapProduct">Tiêu hóa, Gan mặt</div>
                <div class="btnTapProduct">Tai mũi họng</div>
            </div>
        </div>
        <!-- Slideshow container -->
        <div class="position-relative ForP flex-center-colum gap40px">
            <div class="slideshow-container grid gap40px">
                @for(var i = 0 ; i< Model.Count; i++)
                { 
                    <div class="mySlides1 fade flex-center-colum product magin-img-center">
                        <div><img class="ChiTietSanPham" idSp="@Model[i].Id" src="@Model[i].HinhAnh" alt="@Model[i].TenSanPham" /></div>
                        <p style="margin-left : 10px">@Model[i].TenSanPham</p>
                        <p style="margin-left : 10px ; font-weight: bold">Giá: @Model[i].Gia.ToString("N0")đ</p>
