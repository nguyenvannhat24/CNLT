@model List<Hao_Hao.Models.SanPham>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Liên kết tới các tệp CSS trong thư mục wwwroot -->
    <link rel="stylesheet" href="~/css/site.css" />
    <style>

        .vien-hover {
        border: 1px solid rgba(45, 152, 42, 1);
        border-radius: 5px;

        }

        .vien-hover:hover {
        background-color: rgba(45, 152, 42, 1);
            }

        .product{
            transition: transform 0.3s ease-in-out;
        }
        .product:hover{
                transform: scale(1.15);
        }

       
    </style>
</head>
<body>
    <div class="flex-center" id="ImgTitle">
        <img style="width:100% ; height: 100%" src="~/img/images.jpg" alt="Alternate Text" />
    </div>
    <div class="product-Hot">
        <div class="flex-start gap40px maginleft20">
            <img src="img/Firer.png" alt="" />
            <h1>SẢN PHẨM BÁN CHẠY</h1>
        </div>
        <div class="grid">
            @for (var i = 0; i < 5; i++)
            {
                <form asp-controller="HangHoa" asp-action="ThemGioHang" method="post">
                    <div class="product flex-center-colum gap10px" id="product2">
                        <div><img class="ChiTietSanPham" idSp="@Model[i].Id" src="@Model[i].HinhAnh" alt="@Model[i].TenSanPham" /></div>
                        <p style="margin-left : 10px">@Model[i].TenSanPham</p>
                        <p style="margin-left : 10px ; font-weight: bold">Giá: @Model[i].Gia.ToString("N0")đ</p>

                        <!-- Các input ẩn để gửi dữ liệu -->
                        <input type="hidden" name="tenHang" value="@Model[i].TenSanPham" />
                        <input type="hidden" name="MaHang" value="@Model[i].Id" />
                        <input type="hidden" name="soLuong" value="1" />
                        <button class="btnBuyProduct vien-hover" type="submit">Thêm giỏ hàng</button>
                    </div>
                </form>
            }
        </div>
    </div>
    <div class="product-Hot backgroudwihte">
        <div class="flex-start gap40px maginleft20">
            <img src="img/Firer.png" alt="" />
            <h1>SẢN PHẨM HOT</h1>
        </div>
        <div class="grid">
            @for(var i = 2 ; i< 6 ; i++){
                <form asp-controller="HangHoa" asp-action="ThemGioHang" method="post">
                    <div class="product flex-center-colum gap10px" id="product2">
